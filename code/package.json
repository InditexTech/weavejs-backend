{
  "name": "@inditextech/weavejs-backend",
  "version": "0.1.0",
  "description": "Weave.js showcase backend, an example of how handle CRDT's with Yjs and Azure Web Pub Sub as transport.",
  "main": "index.js",
  "type": "module",
  "private": true,
  "author": "Jesus Manuel Pi√±eiro Cid <jesusmpc@inditex.com>",
  "repository": "github:InditexTech/weavejs-frontend",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc && mkdir -p ./dist/public && mkdir -p ./dist/temp && cp -r ./public ./dist",
    "bump:snapshot": "npm version $npm_package_version.$(date \"+%s\")",
    "cleanup": "rm package-lock.json && npkill -D -y",
    "copy:assets": "mkdir -p ./public && cp -r node_modules/@imgly/background-removal-node/dist/. public",
    "dev": "nodemon --exec \"tsx --env-file=.env src/server.ts\"",
    "docker:build": "docker build -t weavejs-showcase-backend .",
    "format": "prettier --write ./src",
    "git:commit-msg": "commitlint -e",
    "git:pre-commit": "npm run lint",
    "git:pre-push": "npm run build",
    "lint": "eslint src/**/* --ext .ts",
    "lint:fix": "eslint src/**/* --ext .ts --fix",
    "postinstall": "npm run copy:assets",
    "prepare": "cd ../ && node code/.husky/install.mjs",
    "publish:snapshot": "nx run-many -t publish:snapshot -- --verbose --tag next --registry $NPM_PUBLISHING_REGISTRY --unsafe-perm",
    "start": "node --experimental-specifier-resolution=node --env-file=.env --loader ts-node/esm dist/server.js",
    "storage:cleanup": "tsx --env-file=./src/actions/storage-cleanup/.env ./src/actions/storage-cleanup/action.ts",
    "verify": "npm ci && npm run lint && npm run build",
    "version:development": "export BUMP_DEVELOP_VERSION=$(npm version $(npm version minor)-SNAPSHOT) && lerna version $BUMP_DEVELOP_VERSION --no-git-tag-version --no-push --force-publish --exact --yes && npm version $(npm version minor)-SNAPSHOT",
    "version:release": "npm ci && lerna version --no-git-tag-version --no-push --force-publish --exact --yes $RELEASE_VERSION && npm version $RELEASE_VERSION"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.26.0",
    "@imgly/background-removal-node": "^1.4.5",
    "@inditextech/weave-sdk": "0.27.3",
    "@inditextech/weave-store-azure-web-pubsub": "0.27.3",
    "@syncedstore/core": "^0.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "yjs": "^13.6.27",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "commitlint": "^19.7.1",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "npkill": "^0.12.2",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  }
}
